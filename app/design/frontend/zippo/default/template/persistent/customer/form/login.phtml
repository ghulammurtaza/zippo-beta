<script type="text/javascript">
    $j(document).ready(function(e) {
        $j("#lnkForgotPass").removeAttr("href");

        $j("#lnkForgotPass").click(function(e) {
            $j("#forgotpassword").show();
            $j("#passModal").show();
        });

        $j("#retCancel").click(function(e) {
            $j("#forgotpassword").hide();
            $j("#passModal").hide();

        });
    });
    function postRequest() {
       email = $j("#txtRetEmail").val();
       $j.ajax({
                url: "<?php echo $this->getUrl('zippo/index/forgotpasswordpost') ?>",
                type: "POST",
                data: {
                    email: email,
                },
                success: function(data) {
                    $j('#retMessage').html(data);
                    $j('#retMessage').show();
                }
            });
    }
</script>